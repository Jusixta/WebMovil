body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

header, footer {
    background-color: #333;
    color: white;
    text-align: center;
    padding: 1em 0;
}

main {
    padding: 1em;
}

section {
    margin-bottom: 2em;
}

@media (max-width: 600px) {
    body {
        font-size: 14px;
    }

    header, footer {
        padding: 0.5em 0;
    }
}
